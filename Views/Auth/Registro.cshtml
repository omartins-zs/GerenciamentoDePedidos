@model GerenciamentoDePedidos.Domain.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-sm p-4" style="width: 400px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Registrar Usuário</h2>
            <form asp-action="Registro" method="post">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Login" class="form-label">Login</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Perfil" class="form-label">Perfil</label>
                    <select asp-for="Perfil" asp-items="Html.GetEnumSelectList<GerenciamentoDePedidos.Enums.PerfilEnum>()" class="form-select"></select>
                    <span asp-validation-for="Perfil" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <button class="btn btn-success w-100">Registrar</button>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Login">Voltar ao Login</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}